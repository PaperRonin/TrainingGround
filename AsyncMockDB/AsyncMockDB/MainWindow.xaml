<Window x:Class="AsyncMockDB.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AsyncMockDB"
        mc:Ignorable="d"
        Background="AliceBlue"
        Title="DataBase connector" Height="450" Width="800">
    <Grid>
        <TextBlock x:Name="StatusBlock" Margin="250,20,250,280" FontSize="20" FontWeight="Bold" Text="Waiting for input" TextAlignment="Center"></TextBlock>
        <Button Name="DbConnectButton" Margin="437,160,70,159" FontSize="20" Click="DbConnect_OnClick">
            Connect to Database
        </Button>
        <Button Name="DbDisconnectButton" Margin="70,160,437,159" FontSize="20" Click="DbDisconnect_OnClick">
            Disconnect from Database
        </Button>
    </Grid>
</Window>
